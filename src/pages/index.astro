<script type="module">
  // Hent alle tidslinjepunkter
  const timelineItems = document.querySelectorAll(".timeline-item");

  // Funktion til at tjekke om et element er synligt
  function isElementInView(el) {
    const rect = el.getBoundingClientRect();
    return rect.top >= 0 && rect.bottom <= window.innerHeight;
  }

  // Funktion til at tilføje animation til synlige elementer
  function handleScroll() {
    timelineItems.forEach((item) => {
      if (isElementInView(item)) {
        // Tilføj animation, hvis elementet er synligt
        item.classList.add("animate__fadeIn");
      }
    });
  }

  // Lyt efter scroll-begivenheder
  window.addEventListener("scroll", handleScroll);

  // Kør initial scroll check, så animationen starter hvis elementet allerede er synligt
  handleScroll();

  document.addEventListener("DOMContentLoaded", function () {
    setTimeout(() => {
      const boldTexts = document.querySelectorAll(".bold-text2");

      boldTexts.forEach((element) => {
        const words = element.getAttribute("data-words")?.split(", ");
        if (!words || words.length === 0) return;

        let index = 0;

        setInterval(() => {
          element.classList.add("fade-out"); // Start fade-out

          setTimeout(() => {
            index = (index + 1) % words.length;
            element.textContent = words[index];

            element.classList.remove("fade-out"); // Fjerner fade-out
            element.classList.add("fade-in"); // Start fade-in

            setTimeout(() => {
              element.classList.remove("fade-in"); // Fjern fade-in igen
            }, 500);
          }, 500); // Skifter ord efter fade-out er færdig
        }, 4000); //
      });
    }, 100);
  });
</script>
